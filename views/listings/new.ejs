<%- include('../layout', { title: "Create Listing", content: ` 
    <h1>Create a New Listing</h1>
    <form action="/listings" method="POST" enctype="multipart/form-data"> <!-- Added enctype for file upload -->
        <label for="type">Type:</label>
        <select id="type" name="type" required>
            <option value="rent">Rent</option>
            <option value="sale">Sale</option>
        </select>

        <label for="price">Price:</label>
        <input type="number" id="price" name="price" required>

        <label for="status">Status:</label>
        <select id="status" name="status" required>
            <option value="available">Available</option>
            <option value="sold">Sold</option>
            <option value="rented">Rented</option>
        </select>

        <label for="image">Upload Image:</label> <!-- Added file input -->
        <input type="file" id="image" name="image" accept="image/*">

        <button type="submit">Create Listing</button>
    </form>
    <a href="/listings">Back to Listings</a>
` }) %>
